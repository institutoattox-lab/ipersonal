  <script>
    // Contador de pessoas online (animado)
    let liveCount = 12;
    setInterval(() => {
      liveCount = Math.floor(Math.random() * 8) + 8; // Entre 8 e 15
      const element = document.getElementById('live-count');
      if (element) element.textContent = liveCount;
    }, 4000);

    // Contador de urgência
    let urgencyCount = 8;
    setInterval(() => {
      urgencyCount = Math.floor(Math.random() * 6) + 6; // Entre 6 e 11
      const element = document.getElementById('urgency-count');
      if (element) element.textContent = urgencyCount;
    }, 7000);

    // Animação de mensagens no mockup
    const messages = [
      { type: 'received', text: 'Qual sua disponibilidade de horário? 📅' },
      { type: 'sent', text: 'Prefiro manhã, entre 7h e 9h' },
      { type: 'received', text: 'Perfeito! Encontrei 3 personal trainers para você! 🎯' }
    ];

    let messageIndex = 0;
    setInterval(() => {
      const chatContainer = document.querySelector('.mockup-chat');
      if (chatContainer && messageIndex < messages.length) {
        const msg = messages[messageIndex];
        const messageDiv = document.createElement('div');
        messageDiv.className = `chat-message ${msg.type}`;
        messageDiv.textContent = msg.text;
        chatContainer.appendChild(messageDiv);
        chatContainer.scrollTop = chatContainer.scrollHeight;
        messageIndex++;
      }
    }, 3000);

    // Scroll suave para âncoras
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
      anchor.addEventListener('click', function (e) {
        e.preventDefault();
        const target = document.querySelector(this.getAttribute('href'));
        if (target) {
          target.scrollIntoView({ behavior: 'smooth', block: 'start' });
        }
      });
    });

    // Toggle FAQ (expandir/colapsar)
    document.querySelectorAll('.faq-item').forEach(item => {
      const answer = item.querySelector('.faq-answer');
      answer.style.display = 'none';
      
      item.addEventListener('click', () => {
        const isOpen = answer.style.display === 'block';
        
        // Fecha todas as outras
        document.querySelectorAll('.faq-answer').forEach(a => {
          a.style.display = 'none';
        });
        
        // Abre/fecha a atual
        answer.style.display = isOpen ? 'none' : 'block';
      });
    });

    // Toggle de preços (Alunos / Profissionais)
    const toggleOptions = document.querySelectorAll('.toggle-option');
    toggleOptions.forEach((option, index) => {
      option.addEventListener('click', () => {
        toggleOptions.forEach(opt => {
          opt.classList.remove('active');
          opt.classList.add('inactive');
        });
        option.classList.remove('inactive');
        option.classList.add('active');
        
        // Aqui você pode adicionar lógica para trocar os cards de preço
        // Por enquanto, está mostrando sempre os mesmos cards
      });
    });

    // Animação ao scroll (fade in)
    const observerOptions = {
      threshold: 0.1,
      rootMargin: '0px 0px -50px 0px'
    };

    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.style.opacity = '1';
          entry.target.style.transform = 'translateY(0)';
        }
      });
    }, observerOptions);

    // Aplica animação em cards e seções
    document.querySelectorAll('.step-card, .review-card, .price-card, .benefit-item').forEach(el => {
      el.style.opacity = '0';
      el.style.transform = 'translateY(20px)';
      el.style.transition = 'opacity 0.6s ease, transform 0.6s ease';
      observer.observe(el);
    });

    // Header transparente ao topo, sólido ao scroll
    let lastScroll = 0;
    window.addEventListener('scroll', () => {
      const header = document.querySelector('header');
      const currentScroll = window.pageYOffset;
      
      if (currentScroll > 100) {
        header.style.boxShadow = '0 4px 20px rgba(0, 0, 0, 0.1)';
      } else {
        header.style.boxShadow = '0 2px 10px rgba(0, 0, 0, 0.05)';
      }
      
      lastScroll = currentScroll;
    });

    // Animação de digitação no mockup (typing indicator)
    function showTypingIndicator() {
      const chatContainer = document.querySelector('.mockup-chat');
      if (chatContainer) {
        const typingDiv = document.createElement('div');
        typingDiv.className = 'chat-message received';
        typingDiv.innerHTML = '<span style="opacity: 0.6;">Assistente digitando...</span>';
        typingDiv.id = 'typing-indicator';
        chatContainer.appendChild(typingDiv);
        chatContainer.scrollTop = chatContainer.scrollHeight;
        
        setTimeout(() => {
          const indicator = document.getElementById('typing-indicator');
          if (indicator) indicator.remove();
        }, 2000);
      }
    }

    // Mostra indicador de digitação periodicamente
    setInterval(showTypingIndicator, 15000);

    // Preload de imagens (se houver)
    window.addEventListener('load', () => {
      document.body.style.opacity = '1';
    });

    // Analytics tracking (Google Analytics)
    // Descomente e adicione seu ID do GA quando configurar
    /*
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());
    gtag('config', 'GA_MEASUREMENT_ID');
    */

    // Tracking de cliques nos CTAs
    document.querySelectorAll('.cta-primary, .cta-secondary').forEach(cta => {
      cta.addEventListener('click', (e) => {
        const ctaText = e.target.textContent.trim();
        console.log('CTA clicked:', ctaText);
        
        // Enviar para analytics quando configurado
        // gtag('event', 'cta_click', { 'cta_name': ctaText });
      });
    });

    // Detecção de dispositivo móvel
    const isMobile = /Android|webOS|iPhone|iPad|iPod|BlackBerry|IEMobile|Opera Mini/i.test(navigator.userAgent);
    
    if (isMobile) {
      // Ajustes específicos para mobile
      document.body.classList.add('mobile');
      
      // Melhora o comportamento do botão flutuante no mobile
      const floatingCta = document.querySelector('.floating-cta');
      if (floatingCta) {
        floatingCta.style.bottom = '1rem';
        floatingCta.style.left = '1rem';
        floatingCta.style.right = '1rem';
      }
    }

    // Previne zoom duplo-clique no iOS
    let lastTouchEnd = 0;
    document.addEventListener('touchend', (e) => {
      const now = Date.now();
      if (now - lastTouchEnd <= 300) {
        e.preventDefault();
      }
      lastTouchEnd = now;
    }, false);

    // Easter egg: Konami code para mostrar stats
    let konamiCode = [];
    const konamiSequence = ['ArrowUp', 'ArrowUp', 'ArrowDown', 'ArrowDown', 'ArrowLeft', 'ArrowRight', 'ArrowLeft', 'ArrowRight', 'b', 'a'];
    
    document.addEventListener('keydown', (e) => {
      konamiCode.push(e.key);
      konamiCode = konamiCode.slice(-10);
      
      if (konamiCode.join(',') === konamiSequence.join(',')) {
        alert('🎉 Você descobriu o easter egg! Stats: 1.247 matches, 97.3% satisfação, 450+ profissionais ativos!');
        konamiCode = [];
      }
    });

    // Notificação de novo match (simulada)
    function showMatchNotification() {
      const names = ['João', 'Maria', 'Carlos', 'Ana', 'Pedro', 'Julia', 'Lucas', 'Camila'];
      const cities = ['São Paulo', 'Rio de Janeiro', 'Goiânia', 'Brasília', 'Belo Horizonte'];
      
      const randomName = names[Math.floor(Math.random() * names.length)];
      const randomCity = cities[Math.floor(Math.random() * cities.length)];
      
      const popup = document.querySelector('.notification-popup');
      if (popup) {
        popup.querySelector('.name').textContent = `✓ ${randomName} encontrou seu personal!`;
        popup.querySelector('.text').textContent = `Há ${Math.floor(Math.random() * 5) + 1} minutos • ${randomCity}`;
        
        // Animação de destaque
        popup.style.animation = 'none';
        setTimeout(() => {
          popup.style.animation = 'slideIn 1s ease-out';
        }, 10);
      }
    }

    // Atualiza notificação de match a cada 8 segundos
    setInterval(showMatchNotification, 8000);

    // Adiciona efeito parallax suave no hero
    window.addEventListener('scroll', () => {
      const scrolled = window.pageYOffset;
      const hero = document.querySelector('.hero');
      if (hero && scrolled < window.innerHeight) {
        hero.style.transform = `translateY(${scrolled * 0.3}px)`;
      }
    });

    // Lazy loading para seções pesadas
    if ('IntersectionObserver' in window) {
      const lazyBackgrounds = document.querySelectorAll('.lazy-bg');
      const bgObserver = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            entry.target.classList.add('loaded');
            bgObserver.unobserve(entry.target);
          }
        });
      });
      
      lazyBackgrounds.forEach(bg => bgObserver.observe(bg));
    }

    // Performance: desabilita animações se o usuário preferir reduced motion
    if (window.matchMedia('(prefers-reduced-motion: reduce)').matches) {
      document.querySelectorAll('*').forEach(el => {
        el.style.animation = 'none';
        el.style.transition = 'none';
      });
    }

    // Adiciona classe quando seção está visível (para analytics)
    const sectionObserver = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          const sectionName = entry.target.className.split(' ')[0];
          console.log('Section viewed:', sectionName);
          // gtag('event', 'section_view', { 'section_name': sectionName });
        }
      });
    }, { threshold: 0.5 });

    document.querySelectorAll('section').forEach(section => {
      sectionObserver.observe(section);
    });

    // Melhora acessibilidade: foco visível em navegação por teclado
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Tab') {
        document.body.classList.add('keyboard-nav');
      }
    });

    document.addEventListener('mousedown', () => {
      document.body.classList.remove('keyboard-nav');
    });

    // CSS para foco de teclado
    const style = document.createElement('style');
    style.textContent = `
      body.keyboard-nav *:focus {
        outline: 3px solid #2563EB;
        outline-offset: 3px;
      }
      body:not(.keyboard-nav) *:focus {
        outline: none;
      }
    `;
    document.head.appendChild(style);

    // Mensagem de console para desenvolvedores
    console.log('%c🎯 iPersonal Landing Page', 'font-size: 20px; font-weight: bold; color: #2563EB;');
    console.log('%c✨ Desenvolvido com ❤️ pela Plataforma MESTRE', 'font-size: 12px; color: #6b7280;');
    console.log('%cInteressado em trabalhar conosco? Fale no WhatsApp: (62) 99560-9037', 'font-size: 12px; color: #10B981;');
  </script>
